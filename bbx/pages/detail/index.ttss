  font-size: 30rpx;
}
.date_type{
  font-size: 30rpx;
  color: #7b7b7b;
  margin-top: 15rpx
}
.date_type text{
  margin-right: 30rpx
}
.image{
  width: 100% !important;
  height: 270rpx !important;
  margin-top: 20rpx !important
}
.act{
  margin-top: 60rpx;
  font-size: 32rpx;
  padding-bottom: 30rpx !important;;
