page {
  background: #14152b;
}
.top{
  width: 100%;
  background-color: #14152b;
  padding: 20rpx;
  position: fixed;
  top: 0rpx;
  z-index: 999;
}
.search {
  width: 91.6%;
  background: #212345;
  height: 90rpx;
  display: flex;
  align-items: center;
  padding: 0rpx 20rpx;
  color: #73769d;
  justify-content: space-between;
  font-size: 32rpx;
  padding: 0rpx 10rpx;
}
.ss{
  margin-top: 130rpx;
}
.inp {
  width: 79%;
}

.btnsearch {
  border-left: 1px #73769d solid;
  padding-left: 20rpx;
}

.xuanze_about {
  width: 95%;
  margin: 0 auto;
  display: flex;
  align-items: center;
  line-height: 50rpx;
  color: #73769d;
  font-size: 34rpx;
  border-bottom: 1rpx #34354a solid;
  padding-bottom: 20rpx;
}

.xuanze_about view {
  flex: 1;
  text-align: center;
  position: relative;
}

.xuanzeAct {
  color: #fe2b52;
}

.mo {
  width: 10rpx;
  height: 10rpx;
  background: #fe2b52;
  border-radius: 50%;
  position: absolute;
  left: 50%;
}

.remen {
  width: 95%;
  margin: 0 auto;
}

.list_item{
  width: 100%;
  display: flex;
  align-items: center;
  padding: 20rpx 0rpx;
  position: relative;
}
.item_img{
  width: 120rpx;
  height: 120rpx;
}
.item_xq{
  width: 60%;
  height: 120rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  padding-left: 20rpx;
}
.itemxq_title{
  color: #fff;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  font-size: 34rpx;
}
.itemxq_name{
  color: #999;
  font-size: 30rpx;
  display: flex;
  align-items: center;
}
.itemxq_icon{
  width: 50rpx;
  height: 50rpx;
  border-radius: 50%;
  margin-right: 15rpx;
}
.tuiguangtxt{
  color: #fe2b52;
  position: absolute;
  right: 0;
  font-size: 36rpx;
}
.about{
  width: 100%;
  margin: 0 auto;
  display: flex;
  align-items: center;
  flex-wrap: wrap;
  margin-bottom: 40rpx;
}
.about_item{
  color: #c2c2c2;
  background:#212345;
  text-align: center;
  padding: 15rpx 0rpx;
  width: 160rpx;
  font-size: 30rpx;
  border: 1px #14152b solid;
  margin: 20rpx;
  margin-bottom: 0rpx;
  margin-right: 0rpx;
}
.act{
  color:#ddc956;
  border: 1px #ddc956 solid;
}
.sear_title{
  width: 95%;
  margin: 0 auto;
  margin-top: 50rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.scroll{
  border:1px red solid;
  width: 100%;
  height: 70vh;
}