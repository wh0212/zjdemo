<view class="search">
	<view style="font-size:32rpx" class="iconfont icon-icon-search"></view>
	<input bindinput="inpchange" class="inp" type="text" placeholder="搜索你想推广的产品或单品"></input>
	<view bindtap="search" class="btnsearch">搜索</view>
</view>

<view class="xuanze_about">
	<view bindtap="xuanzefun" data-index="{{0}}" class="{{xzact==0?'xuanzeAct':''}}">
		热门单品
		<view style="position: absolute;" class="mo" wx:if="{{xzact==0}}"></view>
	</view>
	<view bindtap="xuanzefun" data-index="{{1}}" class="{{xzact==1?'xuanzeAct':''}}">最近上新<view style="position: absolute;" class="mo" wx:if="{{xzact==1}}"></view>
	</view>
</view>

<view wx:if="{{xzact==0}}" class="remen">
	<view class="list_item" wx:for="{{remenList}}" wx:key="index">
		<image class="item_img" src="{{item.img}}"></image>
		<view class="item_xq">
			<view class="itemxq_title">{{item.title}}</view>
			<view class="itemxq_name">
				<image class="itemxq_icon" src="{{item.icon}}"></image>{{item.xcxName}}
			</view>
		</view>
		<view class="tuiguangtxt" catchtap="promotion">推广</view>
	</view>
</view>

<view wx:if="{{xzact==1}}" class="remen">
	<view class="list_item" wx:for="{{xipinList}}" wx:key="index">
		<image class="item_img" src="{{item.img}}"></image>
		<view class="item_xq">
			<view class="itemxq_title">{{item.title}}</view>
			<view class="itemxq_name">
				<image class="itemxq_icon" src="{{item.icon}}"></image>{{item.xcxName}}
			</view>
		</view>
		<view class="tuiguangtxt" catchtap="promotion">推广</view>
	</view>
</view>


<view catchtouchmove="preventD" bindtap="nodemdel" wx:if="{{model}}" class="tuiguang">
	<view catchtap="promotion" class="tuiguang_main">
		<view catchtap="aa" class="main_title">下载推广码</view>
		<view style="color:#888;font-size:30rpx" class="main_js">请下载对应APP的小程序推广码</view>
		<view style="color:red;font-size:30rpx" class="main_js">可绑定多个推广号，无上限</view>
		<view class="main_dy">
			<image class="dylogo" src="../../image/dy.png"></image>
			<text>抖音</text>
			<view catchtap="typept" data-pt="dy" class="main_dy_tg">下载推广码</view>
		</view>
		<view class="main_dy">
			<image class="dylogo" src="../../image/tt.png"></image>
			<text>头条</text>
			<view catchtap="typept" data-pt="tt" class="main_dy_tg">下载推广码</view>
		</view>
	</view>
</view>

<!-- 保存平台二维码 -->
<view catchtap="ewmnone" catchtouchmove="preventD" wx:if="{{ewmact}}" class="ewm">
	<view catchtap="{{true}}" class="ewm_main">
		<image style="width:90%;" data-img="{{'../../image/1.jpg'}}" bindlongtap="showBigImg" src="../../image/1.jpg"></image>
		<view class="saveImg">长按图片保存</view>
	</view>
</view>