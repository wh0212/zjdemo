  color: #fff;
  display: flex;
  align-items: center;
}

.item_top_sy_item {
  flex: 1;
  text-align: center;
  font-size: 29rpx;
}

.item_top_sy_item view {
  height: 50rpx;
}

.item_cp {
  color: #fff;
  line-height: 90rpx;
  font-size: 34rpx;
}

.item_cp_zi {
  width: 100%;
  height: 130rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.item_cp_zi_data {
  color: #Fff;
  width: 60%;
  line-height: 60rpx;
  margin-left: -40rpx;
}

.cp_zi_data {
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
  font-size: 33rpx;
}

.cp_zi_bt {
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  color: #8282a8;
  font-size: 26rpx;
}

.icon-mianfei {
  color: #eee;
  position: absolute;
  right: 0;
  top: 0;
  font-size: 70rpx;
}

.model {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  top: 0;
  background: rgba(0, 0, 0, 0.712);
}

.main_model {
  width: 80%;
  padding: 20rpx 0rpx;
  border-radius: 10rpx;
