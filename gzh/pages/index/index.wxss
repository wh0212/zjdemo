.swiper {
  width: 95%;
  margin: 0 auto;
}

page {
  background: #14152b;
}

.swiperItem image {
  width: 100%;
}

.pt {
  width: 95%;
  margin: 20rpx auto;
  height: 80rpx;
  display: flex;
  align-items: center;
  color: #fff;
}

.pt_left {
  flex: 2;
  font-weight: 700;
  font-size: 34rpx;
  padding-right: 20rpx;
  border-right: 1rpx rgb(192, 190, 190) solid;
  margin-right: 20rpx;
}

.pt_right {
  flex: 7.1;
  color: #fff;
  display: flex;
  align-items: center;

}

.pt_swiper {
  width: 100%;
  height: 60rpx;
  font-size: 28rpx;
  line-height: 60rpx;
}

.pt_icon {
  width: 20rpx;
  height: 20rpx;
}

.pt_jc {
  width: 95%;
  margin: 0 auto;
  display: flex;
  align-items: center;
}

.pt_jc_item {
  height: 120rpx;
  flex: 1;
  background: #0a9efd;
  margin-right: 20rpx;
  color: #fff;
  font-size: 30rpx;
  line-height: 120rpx;
  text-align: center;
}

.pt_jc_item:last-child {
  margin-right: 0rpx;
}

/* 活动 */
.activity {
  width: 100%;
  margin: 20rpx auto;
  height: 170rpx;
  display: flex;
  align-items: center;
}

.activity_item {
  flex: 1;
  height: 170rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-around;
}

.activity_item_bt {
  font-size: 26rpx;
  color: #fff;
  margin-top: -40rpx;
}

.cp_list {
  width: 95%;
  margin: 0 auto;
}

.cp_list_title {
  width: 100%;
  line-height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.title_left {
  color: #Fff;
  font-size: 40rpx;
}

.list {
  width: 94%;
}

.list_item {
  width: 100%;
  padding: 20rpx;
  background: #232247;
  margin-bottom: 25rpx;
}

.list_item_top {
  width: 100%;
  height: 150rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.list_item_top_right {
  padding: 15rpx 25rpx;
  text-align: center;
  background: #fe2c53;
  color: #fff;
  font-size: 27rpx;
}

.list_item_top_left {
  display: flex;
  align-items: center;
}

.item_top_left_xq {
  height: 150rpx;
  color: #fff;
  display: flex;
  padding-left: 20rpx;
  flex-direction: column;
  justify-content: space-around;
}

.item_top_left_xq_gj {
  color: #999;
  font-size: 26rpx;
  background: #343667;
  width: 80rpx;
  text-align: center;
}

.list_item_top_xq {
  color: #999;
  font-size: 28rpx;
  line-height: 50rpx;
}

.list_item_top_sy {
  height: 130rpx;
  width: 100%;
  border-top: 1px #30345c solid;
  border-bottom: 1px #30345c solid;
  margin-top: 15rpx;
  color: #fff;
  display: flex;
  align-items: center;
}

.item_top_sy_item {
  flex: 1;
  text-align: center;
  font-size: 29rpx;
}

.item_top_sy_item view {
  height: 50rpx;
}

.item_cp {
  color: #fff;
  line-height: 90rpx;
}

.item_cp_zi {
  width: 100%;
  height: 130rpx;
  display: flex;
  align-items: center;
justify-content: space-between;
}

.item_cp_zi_data {
  color: #Fff;
  width: 60%;
  line-height: 60rpx;
  margin-left: -40rpx;
}
.cp_zi_bt {
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  color: #8282a8;
  font-size: 26rpx;
}