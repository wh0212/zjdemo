  align-items: center;
}
.useravat{
  width: 110rpx;
  height: 110rpx;
  border-radius: 50%;
}
.user_xq{
  color: #fff;
  padding-left: 20rpx;
  height: 100%;
}
.surplus{
  color:#cbcedd;
  flex:1.5;
  font-size: 32rpx;
  text-align: center;
}
.gengduo{
  color: #fff;
  flex: 1.2;
  text-align: center;
}
.adddyh{
  width: 90%;
  margin: 0 auto;
  background: red;
  color: #fff;
  text-align: center;
  line-height: 80rpx;
  position: fixed;
  bottom: 100rpx;
  left: 5%;
}
.add{
  color: #fff;
  text-align: center;
  margin-top: 100rpx;
  font-size: 40rpx;
}
.listData{
  display: flex;
  align-items: center;
  padding: 20rpx 0px;
  /* border-bottom: 1rpx rgb(94, 93, 93) solid; */
}
.listData image{
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
}
.model{
  position: fixed;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.7);
}
.model_main{
  width: 80%;
  background: #fff;
  min-height: 300rpx;
  position: absolute;
  text-align:center;
  border-radius: 20rpx;
  left: 50%;
  /* 定位父级的50% */
  top: 50%;
  transform: translate(-50%, -50%);
}
.model_title{
  line-height: 80rpx;
  margin-top: 30rpx;
}
.model_title_xq{
  color: #999;
  font-size: 30rpx;
}
.model_img{
  width: 400rpx;
  height: 400rpx;
  text-align: center;
  margin-top: 30rpx;
}
.model_xq{
  margin-top: 30rpx;
  width: 80%;
  margin: 30rpx auto;
  text-align: left;
}
.xq_txt{
  line-height: 50rpx;
  font-size: 30rpx;
}
.model_two{
  width: 100%;
  height: 500rpx;
  background-color:#fff;
  border-top-right-radius: 20rpx;
  border-top-left-radius: 20rpx;
  position: fixed;
  bottom: 0;
  text-align: center;
}
.btnsq{
  width: 80%;
  line-height: 80rpx;
  color: #fff;
  margin: 0rpx auto;
  margin-bottom: 50rpx;
}
.listItem{
  width: 95%;
  height: 100rpx;
  margin: 0 auto;
}