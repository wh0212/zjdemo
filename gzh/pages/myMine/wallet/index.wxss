}
.wallet {
  width: 95%;
  margin: 0 auto;
  display: flex;
  align-items: center;
  border-bottom: 1px rgb(39, 41, 77) solid;
  padding: 20rpx 0rpx;
}

.wallet_item {
  flex: 1;
  text-align: center;
  display: flex;
  flex-direction: column;
  line-height: 50rpx;
