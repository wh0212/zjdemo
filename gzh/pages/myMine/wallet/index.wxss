.top{
  width: 95%;
  margin: 30rpx auto;
  padding-bottom: 20rpx;
  border-bottom: 1px #999 solid;
}
.money{
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.moneycount{
  font-size: 40rpx;
  color: #fff;
  font-weight: 600;
}
.btntx{
  padding: 10rpx 20rpx;
  background: red;
  color: #fff;
}
.txt{
  color: red;
