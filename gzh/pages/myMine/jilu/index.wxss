.main{
  width: 95%;
  margin: 0 auto;
  border-bottom: 1px #999 solid;
  padding: 20rpx 0rpx;
}
.title{
  display: flex;
  align-items: center;
  justify-content: space-between;
  color: #fff;
  margin-top: 20rpx;
}
.list{
  width: 95%;
  margin: 20rpx auto;

}
.item{
  width: 95%;
  display: flex;
  align-items: center;
  padding: 20rpx;
  border-bottom: 1rpx #999 solid;
  color: #999;
  justify-content: space-between;
  background: orange;
  margin-bottom: 20rpx;
  border-radius: 10rpx;
}
.price{
  font-weight: 550;
  color: red;
}
.botm{
  width: 100%;
  text-align: center;
  line-height: 80rpx;
  color: #999;
}